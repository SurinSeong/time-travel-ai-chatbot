# FastAPI AI Server Environment Variables

# 기본 설정
PROJECT_NAME=AI Server
VERSION=1.0.0
API_V1_STR=/api/v1

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 데이터베이스 설정
DATABASE_URL=sqlite:///./ai_server.db

# 보안 설정
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI 모델 설정
AI_MODEL_PATH=/path/to/your/ai/model
AI_MODEL_CONFIG={"temperature": 0.7, "max_tokens": 1000}

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/ai_server.log

# CORS 설정
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8080"]

